    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "id": 28,
    "links": [
      {
        "icon": "doc",
        "targetBlank": true,
        "title": "Documentation",
        "tooltip": "Component controller documentation",
        "type": "link",
        "url": "https://grafana.com/docs/alloy/latest/concepts/component_controller/"
      },
      {
        "asDropdown": true,
        "icon": "external link",
        "includeVars": true,
        "keepTime": true,
        "tags": [
          "alloy-mixin"
        ],
        "targetBlank": false,
        "title": "Dashboards",
        "type": "dashboards"
